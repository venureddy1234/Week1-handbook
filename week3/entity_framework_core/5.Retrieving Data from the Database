        // âœ… Lab 5: Dashboard display

        Console.WriteLine("\nðŸ“‹ Product Dashboard");

        // 1. Retrieve all products with categories
        var products = await context.Products
                                    .Include(p => p.Category)
                                    .ToListAsync();

        foreach (var p in products)
            Console.WriteLine($"{p.Name} - â‚¹{p.Price} - Category: {p.Category?.Name}");

        // 2. Find by ID
        var product = await context.Products
                                   .Include(p => p.Category)
                                   .FirstOrDefaultAsync(p => p.Id == 1);

        Console.WriteLine($"\nðŸ” Found (ID = 1): {product?.Name} - Category: {product?.Category?.Name}");

        // 3. First expensive product
        var expensive = await context.Products
                                     .Include(p => p.Category)
                                     .FirstOrDefaultAsync(p => p.Price > 50000);

        Console.WriteLine($"ðŸ’° Expensive Product: {expensive?.Name} - â‚¹{expensive?.Price}");
    }
